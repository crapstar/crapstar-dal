{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": false,
    "outDir": "build",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "baseUrl": ".",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "build"]
}
